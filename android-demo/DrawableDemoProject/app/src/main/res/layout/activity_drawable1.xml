<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.queqianme.www.drawabledemoproject.DrawableActivity"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ColorDrawable"
            android:background="@drawable/color_drawable"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
            android:background="@drawable/nine_patch_drawable"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
            android:background="@drawable/nine_patch_bitmap_drawable"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈"
            android:background="@drawable/shape_drawable"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="哈哈"
            android:background="@drawable/gradient_linear_drawable"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="哈哈"
            android:background="@drawable/gradient_radial_drawable"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="哈哈"
            android:background="@drawable/gradient_sweep_drawable"/>
        <TextView
            android:id="@+id/txt_bitmap"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="哈哈"
            android:background="@drawable/bitmap_drawable"/>
        <TextView
            android:id="@+id/txt_inset"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="哈哈"
            android:background="@drawable/inset_drawable"/>
        <ImageView
            android:id="@+id/img_clip"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/clip_drawable"/>
    </LinearLayout>
</ScrollView>
