<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="282dp"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:orientation="vertical"
              android:paddingBottom="@dimen/margin20"
              android:paddingLeft="@dimen/margin20"
              android:paddingRight="@dimen/margin20"
              android:paddingTop="25dp">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="标题"
        android:textSize="18sp"
        android:textColor="@color/colorf5f5f9"
        android:layout_marginBottom="@dimen/margin15"/>

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
        android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
        android:textSize="15sp"
        android:textColor="@color/color3c4455"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="25dp">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_cancel_button"
            android:textColor="@color/colorWhite"
            android:text="取消"
            android:layout_marginRight="@dimen/margin15"/>
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_confirm_button"
            android:textColor="@color/colorWhite"
            android:text="确定"/>
    </LinearLayout>
</LinearLayout>