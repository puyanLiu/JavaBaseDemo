package regexTest;

/**
 * @author liupuyan
 * 获取由三个字符组成的单词
 */
public class demo8 {
	public static void main(String[] args) {
		String s = "da jia ting wo shuo, wo men de zu guo hen mei hao";
		String[] strArr = s.split(" +");
		for (int i = 0; i < strArr.length; i++) {
			if (strArr[i].matches("[a-zA-Z]{5}")) {
				System.out.println(strArr[i]);
			}
		}
	}
}
